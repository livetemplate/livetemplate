<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{.Title}}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@1.0.4/css/bulma.min.css">
  </head>
  <body>
    <section class="section">
      <div class="container">
        <h1 class="title">{{.Title}}</h1>

        <!-- Add Form -->
        <div class="box">
          <h2 class="subtitle">Add New Post</h2>
          <form lvt-submit="add">
            <div class="field">
              <label class="label">Title</label>
              <div class="control">
                <input class="input" type="text" name="title" placeholder="Enter title" required
                  {{if .lvt.HasError "title"}}class="input is-danger"{{end}}>
              </div>
              {{if .lvt.HasError "title"}}
                <p class="help is-danger">{{.lvt.Error "title"}}</p>
              {{end}}
            </div>
            <div class="field">
              <label class="label">Published</label>
              <div class="control">
                <label class="checkbox">
                  <input type="checkbox" name="published">
                  Published
                </label>
              </div>
              {{if .lvt.HasError "published"}}
                <p class="help is-danger">{{.lvt.Error "published"}}</p>
              {{end}}
            </div>
            <div class="field">
              <div class="control">
                <button class="button is-primary" type="submit" lvt-disable-with="Adding...">Add Post</button>
              </div>
            </div>
          </form>
        </div>

        <!-- Statistics -->
        <div class="box">
          <p>Total: <strong>{{.TotalCount}}</strong></p>
        </div>

        <!-- Search -->
        <div class="box">
          <div class="field">
            <label class="label">Search</label>
            <div class="control">
              <input class="input" type="search" name="query" placeholder="Search posts..."
                value="{{.SearchQuery}}" lvt-change="search" lvt-debounce="300">
            </div>
          </div>
        </div>

        <!-- Sort -->
        <div class="box">
          <div class="field">
            <label class="label">Sort by</label>
            <div class="control">
              <div class="select">
                <select name="sort_by" lvt-change="sort">
                  <option value="" {{if eq .SortBy ""}}selected{{end}}>Newest First</option>
                  <option value="title_asc" {{if eq .SortBy "title_asc"}}selected{{end}}>Title (A-Z)</option>
                  <option value="title_desc" {{if eq .SortBy "title_desc"}}selected{{end}}>Title (Z-A)</option>
                  <option value="oldest_first" {{if eq .SortBy "oldest_first"}}selected{{end}}>Oldest First</option>
                </select>
              </div>
            </div>
          </div>
        </div>

        <!-- Table -->
        <div class="box">
          <h2 class="subtitle">Posts</h2>
          {{if gt (len .PaginatedPosts) 0}}
            <table class="table is-fullwidth is-striped">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Published</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                {{range .PaginatedPosts}}
                  <tr data-key="{{.ID}}">
                    <td>
                      {{.Title}}
                    </td>
                    <td>
                      {{if .Published}}✓{{else}}✗{{end}}
                    </td>
                    <td>
                      <button class="button is-small is-danger" lvt-click="delete" lvt-data-id="{{.ID}}">
                        Delete
                      </button>
                    </td>
                  </tr>
                {{end}}
              </tbody>
            </table>
          {{else}}
            <p>
              {{if ne .SearchQuery ""}}
                No posts found matching "{{.SearchQuery}}"
              {{else}}
                No posts yet. Add one above!
              {{end}}
            </p>
          {{end}}

          <!-- Pagination -->
          {{if gt .TotalPages 1}}
            <nav class="pagination" role="navigation" aria-label="pagination">
              <button class="pagination-previous button" lvt-click="prev_page" {{if eq .CurrentPage 1}}disabled{{end}}>
                Previous
              </button>
              <button class="pagination-next button" lvt-click="next_page" {{if eq .CurrentPage .TotalPages}}disabled{{end}}>
                Next
              </button>
              <div class="pagination-list">
                <span class="pagination-link is-current">
                  Page {{.CurrentPage}} of {{.TotalPages}}
                </span>
              </div>
            </nav>
          {{end}}
        </div>

        <footer class="box">
          <p><small>Last updated: {{.LastUpdated}}</small></p>
        </footer>
      </div>
    </section>

    <script src="/livetemplate-client.js"></script>
  </body>
</html>
