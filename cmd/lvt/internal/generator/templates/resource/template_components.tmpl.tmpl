{{template "layout" .}}

{{define "content"}}
  <h1[[if ne (titleClass .CSSFramework) ""]] class="[[titleClass .CSSFramework]]"[[end]]>{{.Title}}</h1>

  <!-- Add Form -->
  {{template "formBox" .}}

  <!-- Statistics -->
  {{template "stats" .}}

  <!-- Search -->
  {{template "searchBox" .}}

  <!-- Sort -->
  {{template "sortBox" .}}

  <!-- Table -->
  {{template "tableBox" .}}

  <!-- Footer -->
  <footer[[if ne (boxClass .CSSFramework) ""]] class="[[boxClass .CSSFramework]]"[[end]]>
    <p><small>Last updated: {{.LastUpdated}}</small></p>
  </footer>
{{end}}

{{define "formContent"}}
  {{template "addForm" .}}
{{end}}

{{define "tableContent"}}
  {{template "resourceTable" .}}
  {{template "pagination" .}}
{{end}}
