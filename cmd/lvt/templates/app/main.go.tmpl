package main

import (
	"log"
	"net/http"
	"os"

	"{{.ModuleName}}/internal/database"
	"github.com/livefir/livetemplate"
)

func main() {
	log.Println("{{.AppName}} starting...")

	// Initialize database
	dbPath := getDBPath()
	queries, err := database.InitDB(dbPath)
	if err != nil {
		log.Fatalf("Failed to initialize database: %v", err)
	}
	defer database.CloseDB()

	// Create router for unified /live endpoint
	router := livetemplate.NewRouter()

	// TODO: Register resources here
	// Example: router.Register("users", users.NewStore(queries))

	// Mount unified endpoint
	http.Handle("/live", router)

	port := os.Getenv("PORT")
	if port == "" {
		port = "8080"
	}
	log.Printf("Server starting on http://localhost:%s", port)

	err = http.ListenAndServe(":"+port, nil)
	if err != nil {
		log.Fatalf("Server failed to start: %v", err)
	}
}

func getDBPath() string {
	if os.Getenv("TEST_MODE") == "1" {
		return ":memory:"
	}
	return "app.db"
}
